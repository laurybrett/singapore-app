<div class=container>
  <div class="row">
    <div class="col-sm-12" id=margin-bottom-row-class>

      <%@shops.each do |shop| %>
        <%= link_to shop_path(shop) do %>
          <div class="shop-card">
            <div class="shop-card-header">
              <div class="shop-card-logo-avatar">
              </div>
              <div class="shop-card-price">
                <p>$<%= shop.price%></p>
              </div>
              <div class="shop-card-title">
                <h4><%= shop.name%></h4>
              </div>
            </div>
            <div class="shop-card-footer">
              <div>
                <p id="nb-left"><%=shop.nb_box%> left</p>
                <p id="shop-addresss"><%= shop.location %></p>
              </div>
              <div>
                <p id="collection-time">7.30pm - 8.30pm</p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
