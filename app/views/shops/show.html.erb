<div class="shop-title">
  <h4><%=@shop.name%></h4>
</div>

<div class=container>
  <div class="row">
    <div class="col-sm-12">

        <div class="big-shop-card pos-rel">

          <div class="big-shop-card-header">
            <p><%=@shop.nb_box%> left</p>
            <p>7.30pm - 8.30pm</p>
            <div class="shop-card-logo-avatar">
            </div>
            <div class="shop-card-title">
            </div>
          </div>

          <div class="big-shop-card-footer navbar-fixed-bottom">
            <div class="big-shop-card-price">
              <div class="ex-price-card">
                <p>$<%= @shop.ex_price%></p>
              </div>
              <p>$<%= @shop.price%></p>
            </div>
          </div>
        </div>
    </div>


    <div class="description-container">
      <p><%= @shop.description%></p>
    </div>

    <div class="direction-container">
      <p><%= @shop.location %></p>
    </div>

    <div class="col-sm-12">
        <div class="add-cart">
          <%= link_to new_shop_cart_path(@shop.id) do %>
            <div class="btn btn-action btn-add-cart">
             +
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
